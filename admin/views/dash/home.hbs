{{#if display_domain_selector}}
  <div class='modal show'>
    <div class='modal-dialog'>
      <div class='modal-content'>
        <form method='post'>
          <input type='hidden' name='action' value='set-domain'>
          <div class='modal-header'>Enter Root Domain Name</div>
          <div class='modal-body'>
            <h2>Enter root domain name</h2>
            <p>Please enter the domain / IP where WHMGR is running.
            <div class='input-group'>
              <span class='input-group-addon'>http://</span>
              <input type='text' name='url' value='{{the_ip}}' class='form-control'>
            </div>
          </div>
          <div class='modal-footer'>
            <input type='submit' class='btn btn-primary pull-right' value='Save Changes'>
          </div>
        </form>
      </div>
    </div>
  </div>
{{/if}}
{{#if client_loggedin}}
  <div class='modal show' data-backdrop="static" data-keyboard="false">
    <div class='modal-dialog'>
      <div class='modal-content'>
          <div class='modal-header'>Loggedin to clientarea</div>
          <div class='modal-body'>
            You are loggedin to a client account, 
            please logout before using whmgr admin. 
          </div>
          <div class='modal-footer'>
            <a href='/auth/client-logout' class='btn btn-primary'>
              Logout client
            </a>
            <a href='/clientarea' class='btn btn-primary'>
              Goto client area
            </a>
          </div>
      </div>
    </div>
  </div>
{{/if}}
