<div class='page-header'>
	<h2>Create email account</h2>
</div>
<div class='well'>
	Create a new email address for your domain.
	<a class='btn btn-primary pull-right' href='/clientarea'>
		Go back
	</a>
</div>
<div class='row'>
	<div class='col-md-4'>
		{{#if email_exists}}
			<div class='alert alert-danger'>
				An email account with this address already exists.
			</div>
		{{/if}}
		<form method='post'>
			<label>Email Address</label>
			<div class='input-group {{#if email_exists}}has-error{{/if}}'>
				<input name='username' class='form-control'>
				<span class='input-group-addon'>
					@{{domain}}
				</span>
			</div>
			<div class='form-group'>
				<label>Password</label>
				<input type='password' name='password' class='form-control'>
			</div>
			<div class='form-group'>
				<input type='submit' class='btn btn-primary pull-right' value='Create User'>
			</div>
		</form>
	</div>
</div>
